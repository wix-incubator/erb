{
  "name": "erb",
  "version": "1.3.0",
  "description": "Compile a given Embedded RuBy (ERB) template using variables and functions defined in given a JavaScript object",
  "main": "index.js",
  "scripts": {
    "build:opal:base64": "bundle exec opal-build base64 > ruby/base64.js",
    "build:opal:compiler": "bundle exec opal-build opal/compiler > ruby/opal-compiler.js",
    "build:opal:corelib-string-unpack": "bundle exec opal-build corelib/string/unpack > ruby/corelib-string-unpack.js",
    "build:opal:erb": "bundle exec opal-build erb > ruby/erb.js && bundle exec opal-build opal/erb > ruby/opal-erb.js",
    "build:opal:json": "bundle exec opal-build json > ruby/json.js",
    "build:opal:runtime": "bundle exec opal-build opal > ruby/opal.js",
    "build:opal:template": "bundle exec opal-build template > ruby/template.js",
    "build:opal": "mkdir -p ruby && npm run build:opal:base64 && npm run build:opal:compiler && npm run build:opal:corelib-string-unpack && npm run build:opal:erb && npm run build:opal:json && npm run build:opal:runtime && npm run build:opal:template",
    "build:vendor": "bundle install --path vendor/bundle",
    "build": "npm run build:vendor && npm run build:opal",
    "clean": "rm -rf .bundle ruby vendor",
    "lint": "eslint --fix .",
    "posttest": "npm run lint",
    "pretest": "npm run build",
    "test": "mocha --reporter mocha-env-reporter --recursive --async-only --bail --no-exit --check-leaks --timeout 120000"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/erb"
  },
  "author": "Vytautas Jakutis",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/wix/erb/issues"
  },
  "homepage": "https://github.com/wix/erb",
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "lodash": "^4.17.4",
    "mocha": "^3.4.2",
    "mocha-env-reporter": "^2.0.4",
    "npm-version-up": "^0.1.5",
    "sinon": "^2.3.6",
    "sinon-chai": "^2.11.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0"
  },
  "files": [
    "ruby",
    "README.md",
    "package.json",
    "index.js",
    "lib"
  ]
}
