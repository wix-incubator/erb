{
  "name": "erb",
  "version": "2.0.0",
  "description": "Compile a given Embedded RuBy (ERB) template using variables and functions defined in given a JavaScript object",
  "main": "./lib/erb/index.js",
  "license": "BSD-3-Clause",
  "author": "Vytautas Jakutis",
  "homepage": "https://github.com/wix/erb",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/erb"
  },
  "contributors": [
    {
      "email": "ghaiklor@gmail.com",
      "name": "Eugene Obrezkov",
      "url": "https://ghaiklor.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/wix/erb/issues"
  },
  "files": [
    "lib",
    "ruby"
  ],
  "scripts": {
    "build:opal:base64": "bundle exec opal-build --output ruby/base64.js base64",
    "build:opal:compiler": "bundle exec opal-build --output ruby/opal-compiler.js opal/compiler",
    "build:opal:corelib-string-unpack": "bundle exec opal-build --output ruby/corelib-string-unpack.js corelib/string/unpack",
    "build:opal:erb": "bundle exec opal-build --output ruby/erb.js erb && bundle exec opal-build --output ruby/opal-erb.js opal/erb",
    "build:opal:json": "bundle exec opal-build --output ruby/json.js json",
    "build:opal:runtime": "bundle exec opal-build --output ruby/opal.js opal",
    "build:opal:template": "bundle exec opal-build --output ruby/template.js template",
    "build:opal": "mkdir -p ruby && npm run build:opal:base64 && npm run build:opal:compiler && npm run build:opal:corelib-string-unpack && npm run build:opal:erb && npm run build:opal:json && npm run build:opal:runtime && npm run build:opal:template",
    "build:vendor": "bundle install --path vendor/bundle",
    "build": "npm run build:vendor && npm run build:opal",
    "clean": "rm -rf .bundle ruby vendor",
    "lint": "eslint --fix .",
    "test": "mocha"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "7.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "lodash": "4.17.20",
    "mocha": "8.1.3",
    "mocha-env-reporter": "4.0.0",
    "npm-version-up": "0.1.7",
    "sinon": "9.2.0",
    "sinon-chai": "3.5.0"
  },
  "dependencies": {
    "bluebird": "3.7.2"
  }
}
